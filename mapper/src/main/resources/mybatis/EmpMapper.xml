<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sjxy.mapper.EmpMapper">

<insert id="insertEmp" parameterType="com.sjxy.pojo.Emp">
        insert into emp(name,photo,did) values(#{name},#{photo},#{did})
    </insert>


    <select id="findEmpByDeptId" parameterType="int" resultType="com.sjxy.pojo.Emp">
        select id,name,photo from emp where did=#{did}
    </select>
</mapper>